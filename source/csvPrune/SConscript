sourceFiles = Split("""
                       main.cpp
                    """)

Import('env')
csvPruneEnv = env.Clone()

csvPruneEnv.MergeFlags('-O6 -Wall -Werror')
csvPruneEnv['CPPPATH'] = '#/source'

csvPrune = csvPruneEnv.Program(target = 'csvPrune', source = sourceFiles)
csvPruneInstall = csvPruneEnv.Install('#/bin', csvPrune)

csvPruneEnv.Default(csvPrune)
csvPruneEnv.Default(csvPruneInstall)
